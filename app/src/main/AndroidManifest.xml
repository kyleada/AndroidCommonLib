<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kkwang.myapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.kkwang.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.kkwang.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.kkwang.tab.TabActivity" />
        <activity android:name="com.kkwang.zhihuDailyPRD.ui.Activity.ZhihuHomeActivity" />
        <activity android:name="com.kkwang.zhihuDailyPRD.ui.Activity.NewsDetailActivity" />
        <activity android:name="com.kkwang.liteORM.LiteActivity"></activity>
        <activity android:name="com.kkwang.recyclerViewHeaderFooter.EndlessGridLayoutActivity"></activity>
        <activity android:name="com.kkwang.recyclerViewHeaderFooter.EndlessStaggeredGridLayoutActivity"></activity>
        <activity android:name="com.kkwang.recyclerViewHeaderFooter.RVMainActivity"></activity>
        <activity android:name="com.kkwang.recyclerViewHeaderFooter.EndlessLinearLayoutActivity"></activity>
        <activity android:name="com.kkwang.recyclerViewHeaderFooter.LinearLayoutActivity"></activity>
        <activity android:name="com.kkwang.myapp.auth.ui.LoginActivity"></activity>
        <activity android:name="com.kkwang.myapp.auth.ui.SignUpActivity"></activity>
        <activity android:name="com.kkwang.myapp.auth.ui.ForgetPasswordActivity"></activity>
    </application>

</manifest>